<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="film"
            type="mikhail.shell.movie.app.models.Film" />
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:background="?attr/colorSurface">

            <ImageView
                android:id="@+id/one_film_poster"
                android:layout_width="132dp"
                android:layout_height="201dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:background="@drawable/rounded_shape"
                android:clipToOutline="true"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/localized_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="?attr/colorOnSurface"
                android:textSize="26sp"
                android:text="@{film.localized_name}" />

            <TextView
                android:id="@+id/genres_and_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="#4B4B4B"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="#0E3165"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/kinopoisk"
                    android:textColor="#0E3165"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="?attr/colorOnSurface"
                android:textSize="14sp"
                android:text="@{film.description}"
                android:lineHeight="20sp"/>

        </LinearLayout>
    </ScrollView>
</layout>
